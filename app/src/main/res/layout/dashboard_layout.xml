<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="100dp">
    <TextView
        android:id="@+id/dashboard_textView_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:typeface="monospace"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:hint="User Name"/>
    <TextView
        android:id="@+id/dashboard_textView_passwordName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:typeface="monospace"
        android:textAlignment="center"
        android:textStyle="bold"
        android:hint="Password"/>
    <TextView
        android:id="@+id/dashboard_textView_mobileNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:typeface="monospace"
        android:textAlignment="center"
        android:textStyle="bold"
        android:hint="Mobile no"/>
    <TextView
        android:id="@+id/dashboard_textView_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:typeface="monospace"
        android:textAlignment="center"
        android:textStyle="bold"
        android:hint="User Address"/>
    <TextView
        android:id="@+id/dashboard_textView_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:typeface="monospace"
        android:textAlignment="center"/>
    <Button
        android:id="@+id/dashboard_btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:typeface="monospace"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Logout"/>
   
</LinearLayout>